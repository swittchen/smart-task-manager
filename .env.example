# PostgreSQL
POSTGRES_DB=smart_task_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend datasource (wichtig: Hostname ist "db", weil Compose-Netzwerk)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/smart_task_manager
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Optional
SPRING_JPA_HIBERNATE_DDL_AUTO=update # generates tables in postgres automatically from entities
SPRING_JPA_SHOW_SQL=false

# Spring Security
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin123

# JWT
JWT_SECRET=change-me-to-a-long-random-secret-64chars
JWT_EXP_MINUTES=120
